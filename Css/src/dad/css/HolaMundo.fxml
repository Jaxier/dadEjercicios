<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="320.0" spacing="10.0" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141">
   <children>
      <TextField fx:id="nombreText" maxWidth="100.0" prefWidth="0.0" promptText="Nombre" />
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <children>
            <Button fx:id="saludarButton" defaultButton="true" mnemonicParsing="false" onAction="#SaludarOnAction" text="Saludar" />
            <Button fx:id="despedirButton" mnemonicParsing="false" onAction="#DespedirOnAction" text="Despedir" />
         </children>
      </HBox>
      <Label fx:id="saludoLabel" text="Saludo" />
      <Button fx:id="salirButton" mnemonicParsing="false" onAction="#SalirOnAction" text="Salir" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
