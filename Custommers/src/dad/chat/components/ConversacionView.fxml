<?xml version="1.0" encoding="UTF-8"?>

<?import dad.chat.components.ProfileImage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxWidth="300.0" spacing="25.0" type="HBox" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ProfileImage fx:id="profileImage">
         <image>
            <Image url="@../../resources/people.png" />
         </image>
      </ProfileImage>
      <VBox>
         <children>
            <Label fx:id="nombreLabel" text="Nombre">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="mensajeLabel" text="Ultimo mensaje">
               <font>
                  <Font name="Arial Italic" size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Label fx:id="horaLabel" text="22/01/2018">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
